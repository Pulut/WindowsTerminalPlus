<UserControl x:Class="TerminalApp.LauncherPaneContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:TerminalApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mtu="using:Microsoft.Terminal.UI"
             AutomationProperties.LocalizedControlType="pane"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark">
                    <Color x:Key="PageBackground">#282828</Color>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <Color x:Key="PageBackground">#F9F9F9</Color>
                </ResourceDictionary>
                <ResourceDictionary x:Key="HighContrast">
                    <StaticResource x:Key="PageBackground"
                                    ResourceKey="SystemColorWindowColorBrush" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{ThemeResource PageBackground}"
          Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="WindowsTerminalPlus"
                   FontSize="20"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,16" />

        <!-- Select Folder Button -->
        <Button x:Name="_selectFolderButton"
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                Click="_selectFolderClick"
                Padding="12,10">
            <StackPanel Orientation="Horizontal">
                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                          Glyph="&#xE838;"
                          Margin="0,0,8,0" />
                <TextBlock Text="请选择工作目录" />
            </StackPanel>
        </Button>

        <!-- Selected Folder Display -->
        <Border Grid.Row="2"
                Margin="0,8,0,0"
                Padding="12,8"
                Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                CornerRadius="4"
                Visibility="{x:Bind mtu:Converters.StringNotEmptyToVisibility(SelectedFolder), Mode=OneWay}">
            <StackPanel Orientation="Horizontal">
                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                          Glyph="&#xE8B7;"
                          FontSize="14"
                          Margin="0,0,8,0"
                          Foreground="{ThemeResource SystemAccentColor}" />
                <TextBlock Text="{x:Bind SelectedFolder, Mode=OneWay}"
                           TextTrimming="CharacterEllipsis"
                           ToolTipService.ToolTip="{x:Bind SelectedFolder, Mode=OneWay}" />
            </StackPanel>
        </Border>

        <!-- AI Buttons -->
        <StackPanel Grid.Row="3"
                    Margin="0,16,0,0">

            <!-- Claude Button -->
            <Button x:Name="_claudeButton"
                    Click="_claudeClick"
                    HorizontalAlignment="Stretch"
                    Height="44"
                    Margin="0,0,0,6"
                    Padding="0,0,8,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Image x:Name="_claudeImage"
                           Width="100"
                           Height="100"
                           Stretch="Uniform"
                           VerticalAlignment="Stretch" />
                    <TextBlock Text="Anthropic"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Button>

            <!-- Codex Button -->
            <Button x:Name="_codexButton"
                    Click="_codexClick"
                    HorizontalAlignment="Stretch"
                    Height="44"
                    Margin="0,0,0,6"
                    Padding="0,0,8,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Image x:Name="_codexImage"
                           Stretch="Uniform"
                           VerticalAlignment="Stretch" />
                    <TextBlock Text="OpenAI_GPT"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Button>

            <!-- Gemini Button -->
            <Button x:Name="_geminiButton"
                    Click="_geminiClick"
                    HorizontalAlignment="Stretch"
                    Height="44"
                    Padding="0,0,8,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Image x:Name="_geminiImage"
                           Stretch="Uniform"
                           VerticalAlignment="Stretch" />
                    <TextBlock Text="Google"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Button>

        </StackPanel>

        <!-- Git Log Section -->
        <Grid Grid.Row="4"
              Margin="0,16,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="Git 记录"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8" />

            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="_gitCommitsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="local:GitCommitItem">
                            <StackPanel Margin="0,0,0,8">
                                <TextBlock Text="{x:Bind DateTimeAndHash}"
                                           FontFamily="Cascadia Mono"
                                           FontSize="12"
                                           Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="{x:Bind Message}"
                                           FontSize="12"
                                           TextWrapping="Wrap"
                                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

    </Grid>

</UserControl>
